<!DOCTYPE html>
<html lang="en">
	<%- include('header.ejs'); %>
	<body>
		<%- include('nav.ejs'); %>
		<div class="container">
			<br />
			<h4>Send Push notification to users</h4>
			<br /><br />
			<div>
				<form action="/user/send/customNotification" method="POST">
					<div class="form-group">
						<label>Title</label>
						<input type="text" class="form-control" id="title" required />
					</div>
					<div class="form-group">
						<label>Message:</label>
						<textarea type="textarea" class="form-control" id="message" required></textarea>
					</div>
					<button type="submit" class="btn btn-primary">
						Send
					</button>
				</form>
			</div>
		</div>
	</body>
</html>
